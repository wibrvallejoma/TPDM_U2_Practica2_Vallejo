<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF"
    tools:context=".InsertarPropietario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono:"
        android:textColor="#202020"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="3111234567"
        android:inputType="phone"
        android:id="@+id/insertarPropietario_telefono"
        android:textColor="#717171"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="#202020"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/insertarPropietario_nombre"
        android:textColor="#717171"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domicilio"
        android:textColor="#202020"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/insertarPropietario_domicilio"
        android:textColor="#717171"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textColor="#202020"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="AAAA/MM/DD"
        android:id="@+id/insertarPropietario_fecha"
        android:layout_marginBottom="50dp"
        android:textColor="#717171"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear nuevo propietario"
        android:id="@+id/insertarPropietario_btnInsertar"
        android:background="#F05C65"
        android:textColor="#FFF"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancelar"
        android:id="@+id/insertarPropietario_regresar"
        android:background="#FFF"
        android:textColor="#F05C65"
        />
</LinearLayout>